# Rotate Alces Websocket Proxy logs
/var/log/alces-websocket-proxy/*.log {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    create 640 nobody adm
    sharedscripts
      postrotate
      [ -f /var/run/alces-websocket-proxy.pid ] && kill -USR1 `cat /var/run/alces-websocket-proxy.pid`
    endscript
}
