setup() {
    local a xdg_config
    IFS=: read -a xdg_config <<< "${XDG_CONFIG_HOME:-$HOME/.config}:${XDG_CONFIG_DIRS:-/etc/xdg}"
    for a in "${xdg_config[@]}"; do
        if [ -e "${a}"/clusterware/config.rc ]; then
            source "${a}"/clusterware/config.rc
            break
        fi
    done
    if [ -z "${cw_ROOT}" ]; then
        echo "$0: unable to locate clusterware configuration"
        exit 1
    fi
    kernel_load
}

main() {
  local queue node_id
  queue="$1"
  if [ -z "$queue" ]; then
      action_die "no queue specified"
  elif ! compute_valid_queue "$queue"; then
      action_die "invalid queue: ${queue}"
  fi
  node_id="$2"
  if [ -z "$node_id" ]; then
      action_die "no node specified"
  fi

  if compute_shoot "${queue}" "${node_id}"; then
      action_die "node shot: ${queue}/${node_id}" 0
  else
      action_die "unable to shoot node: ${_COMPUTE_ERROR}"
  fi
}

setup

require action
require process

process_reexec_sudo "$@"

. "${cw_ROOT}/libexec/compute/share/functions.sh"

main "$@"
