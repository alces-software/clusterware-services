# Execute as ruby script if we're evaluating under bash
if [ "" ]; then 0; else eval 'cw_RUBY_EXEC "$@" || exit 1'; fi; end

ENV['BUNDLE_GEMFILE'] ||= "#{ENV['cw_ROOT']}/opt/forge/Gemfile"
$: << "#{ENV['cw_ROOT']}/opt/forge/lib"

require 'bundler/setup'
require 'alces/forge/cli'

Alces::Forge::CLI.new.run
